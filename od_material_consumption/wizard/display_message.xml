<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="view_display_message_form" model="ir.ui.view">
        <field name="name">view.display.message.form</field>
        <field name="model">display.message</field>
        <field name="arch" type="xml">
            <form string="Display Messaget">
            	<group>
            		<field name="name" readonly="1" nolabel="1"/>
				</group>
				<footer>
					<button string="Close" class="btn btn-default" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
</odoo>